<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/colorbg"
    tools:context=".loginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_gravity="top"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/logo_skinmates" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bottom_mounted_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/latobold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Welcome Back!" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailFormField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_field"
        android:textSize="15dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/lato"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordFormField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_field"
        android:textSize="15dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/lato"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/latobold"
        android:textSize="18dp"
        android:background="@drawable/form_field"
        app:backgroundTint="@color/red_300"
        android:backgroundTint="@color/red_300" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="180dp"
            android:gravity="center"
            android:text="Or"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintVertical_bias="0.8" />

        <LinearLayout
            android:id="@+id/linearButton"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Continue with Google"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/latobold"
                android:textSize="15dp"
                android:background="@drawable/form_field"
                app:backgroundTint="@color/red_300"
                android:backgroundTint="@color/red_300"
                android:drawableStart="@drawable/img_google"
                android:drawablePadding="8dp" />


            <TextView
        android:id="@+id/textView6"
        android:layout_width="136dp"
        android:layout_height="28dp"
        android:text="Don't have account?"
                android:fontFamily="@font/lato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

            <Button
                android:id="@+id/registerPageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Now"
                android:textColor="@color/gray_901"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/latobold"
                android:background="@drawable/form_field2"
                app:backgroundTint="@color/red_100"
                android:backgroundTint="@color/white"
                /> />
</LinearLayout>