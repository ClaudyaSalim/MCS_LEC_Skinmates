<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skinmates" parent="@style/Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_orange_51</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_orange_51</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowButtonStyle">@style/ThreeDotColor</item>
<!--        <item name="android:actionMenuTextColor">@style/myTheme.ActionBar.Text</item>-->
<!--        <item name="actionBarStyle">@style/myTheme</item>-->
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/deep_orange_51</item>
        <item name="background">@color/deep_orange_51</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <!-- Text -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/latobold</item>
    </style>

    <style name="ThreeDotColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">#941a31</item>
    </style>

</resources>